<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="800" prefWidth="1200" stylesheets="/style.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main.GUI.MainViewController">
   <left>
      <Accordion fx:id="settings" BorderPane.alignment="CENTER">
        <panes>
            <TitledPane prefHeight="748.0" prefWidth="260.0" text="Graph">
                <AnchorPane fx:id="graphSettings" minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <TextField fx:id="nodeCount" layoutX="17.0" layoutY="85.0" prefHeight="26.0" prefWidth="225.0" promptText="Number of the graph Nodes" />
                    <TextField fx:id="maxEdgeCount" layoutX="17.0" layoutY="133.0" prefHeight="26.0" prefWidth="225.0" promptText="Max neighbors" />
                    <Button layoutX="13.0" layoutY="229.0" mnemonicParsing="false" onAction="#generateGraph" prefHeight="26.0" prefWidth="231.0" text="Generate" />
                  <TextField fx:id="serverCount" layoutX="14.0" layoutY="180.0" prefHeight="26.0" prefWidth="223.0" promptText="Actors Count" />
                </AnchorPane>
            </TitledPane>
        </panes>
      </Accordion>
   </left>
   <center>
       <ScrollPane fitToHeight="true" fitToWidth="true">
           <AnchorPane fx:id="graphPanel"/>
       </ScrollPane>
   </center>
</BorderPane>
